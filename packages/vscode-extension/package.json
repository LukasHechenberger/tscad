{
  "name": "tscad-vscode",
  "displayName": "tscad",
  "version": "0.0.0-pre.0",
  "private": true,
  "description": "The official tscad VSCode extension",
  "categories": [
    "Visualization"
  ],
  "homepage": "https://tscad.vercel.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LukasHechenberger/tscad.git",
    "directory": "packages/vscode-extension"
  },
  "license": "MIT",
  "author": "Lukas Hechenberger <npm@ls-age.com> (https://ls-age.com/)",
  "publisher": "tscad",
  "type": "commonjs",
  "main": "./out/extension.js",
  "scripts": {
    "build": "tsup --minify",
    "check:types": "tsc --noEmit",
    "compile-tests": "tsc -p . --outDir out",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "package": "pnpm run check:types && pnpm run lint && pnpm build",
    "pretest": "pnpm run compile-tests && pnpm run build && pnpm run lint",
    "test": "vscode-test",
    "vscode:prepublish": "pnpm run package"
  },
  "contributes": {
    "commands": [
      {
        "command": "tscad-vscode.open-preview",
        "title": "Open tscad preview"
      }
    ]
  },
  "activationEvents": [],
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.32",
    "@types/vscode": "^1.102.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.29.0",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "vscode": "^1.103.0"
  }
}
